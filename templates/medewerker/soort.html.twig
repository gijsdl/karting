{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li class="active"><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li><a href="{{ path('beheer') }}"><span class="badge">{{ aantal }}</span>beheer</a></li>
    <li><a href="{{ path('soort') }}"><span class="badge">{{ soorten|length }}</span>soort activiteit beheer</a> </li>
{% endblock %}
{% block content %}
    <section>
        <table class="table" style="table-layout: fixed">
            <caption>Dit zijn alle soorten activiteiten van het kartcentrum</caption>
            <thead>
            <tr>
                <td>naam</td>
                <td>minimale leeftijd</td>
                <td>tijdsduur</td>
                <td>prijs</td>
                <td>beschrijving</td>
                <td>bewerken</td>
                <td>verwijderen</td>
            </tr>
            </thead>
            <tbody>
            {% for soort in soorten %}
                <tr>
                    <td>
                        {{ soort.naam }}
                    </td>
                    <td>
                        {{ soort.minLeeftijd }}
                    </td>
                    <td>
                        {{ soort.tijdsduur }}
                    </td>
                    <td>
                        {{ soort.prijs }}
                    </td>
                    <td>
                        {{ soort.beschrijving }}
                    </td>
                    <td title="bewerk de gegevens van deze activiteit">


                        <a href="{{ path('update_soort', {'id':soort.id}) }}">
                            <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                        </a>
                    </td>
                    <td title="verwijder deze activiteit is definitief">
                        <a href="{{ path('delete_soort', {'id':soort.id}) }}">
                            <span class="glyphicon glyphicon-minus" style="color:red"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="7">
                    <a href="{{ path('add_soort') }}">
                        <span class="glyphicon glyphicon-plus" style="color:red"></span>
                    </a>
                </td>
            </tr>

            </tbody>
        </table>
        <br/>
    </section>

{% endblock %}
